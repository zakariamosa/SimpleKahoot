<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTeacherOriginalQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:width="296dp"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewQuestionAlternativeAnswer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:width="296dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTeacherOriginalQuestion" />

            <TextView
                android:id="@+id/txtViewQuestionAlternativeAnswer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:width="296dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewQuestionAlternativeAnswer1" />

            <TextView
                android:id="@+id/txtViewQuestionAlternativeAnswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:width="296dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewQuestionAlternativeAnswer2" />

            <TextView
                android:id="@+id/txtViewQuestionAlternativeAnswer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:width="296dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewQuestionAlternativeAnswer3" />

            <TextView
                android:id="@+id/textViewStudentAnswer"
                android:layout_width="71dp"
                android:layout_height="15dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="Student Answer"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/txtTeacherOriginalQuestion"
                app:layout_constraintTop_toTopOf="@+id/txtTeacherOriginalQuestion" />

            <TextView
                android:id="@+id/txtStudentAnswer"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_marginStart="5dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/txtViewQuestionAlternativeAnswer1"
                app:layout_constraintTop_toBottomOf="@+id/txtTeacherOriginalQuestion" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>