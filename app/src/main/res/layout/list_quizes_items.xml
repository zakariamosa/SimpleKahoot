<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="397dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewMyQuizName"
                android:layout_width="195dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewMyQuizDate"
                android:layout_width="195dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewMyQuizName" />

            <TextView
                android:id="@+id/txtViewMyQuizCode"
                android:layout_width="195dp"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewMyQuizDate" />

            <Button
                android:id="@+id/btnListAllMyStudentsResultat"
                android:layout_width="195dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:background="#673AB7"
                android:text="Students Results"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewMyQuizCode" />

            <Button
                android:id="@+id/btnCopyQuizCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="#FF9800"
                android:text="Copy code"
                app:layout_constraintStart_toEndOf="@+id/txtViewMyQuizCode"
                app:layout_constraintTop_toBottomOf="@+id/txtViewMyQuizDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>